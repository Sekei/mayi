<?xml version="1.0" encoding="utf-8"?>
<com.liaoinstan.springview.widget.SpringView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/springview"
    style="@style/view_match_parent">

    <ScrollView
        style="@style/view_match_parent"
        android:scrollbars="none">

        <LinearLayout
            style="@style/ll_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <com.youth.banner.Banner
                android:id="@+id/home_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:delay_time="5000"
                app:image_scale_type="fit_xy"
                app:indicator_drawable_selected="@drawable/indicator_drawable_selected"
                app:indicator_drawable_unselected="@drawable/indicator_drawable_unselected"
                app:indicator_height="7dp"
                app:indicator_margin="3dp"
                app:indicator_width="7dp" />

            <LinearLayout
                style="@style/ll_horizontal"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_live" />

                <TextView
                    style="@style/tv_666666"
                    android:layout_marginLeft="10dp"
                    android:text="正在直播" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_spotvideo"
                style="@style/view_match_parent"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>
</com.liaoinstan.springview.widget.SpringView>